<h1>Posts and Comments</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Created At</th>
      <th>Record Type</th>
    </tr>
  </thead>
  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td>
          <!-- Display title for posts, but nothing for comments -->
          <% if record.record_type == 'Post' %>
            <%= record.title %>
          <% else %>
            <!-- Display nothing for comments under title column -->
            &ndash;
          <% end %>
        </td>
        <td>
          <%= record.content %>
        </td>
        <td>
          <%= record.created_at.strftime('%B %d, %Y %I:%M %p') %>
        </td>
        <td>
          <%= record.record_type %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
